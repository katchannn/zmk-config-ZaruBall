        lower_layer {
            display-name = "Lower";
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
            bindings = <
&trans  &none   &none  &none     &none     &none             &trans  &trans  &trans  &trans            &none   &none      &none      &none      &none  &none
&trans  &none   &none  &none     &none     &none             &trans  &trans  &trans  &trans            &none   &none      &none      &none      &none  &none
&trans  &none   &none  &mkp MB4  &mkp MB5  &none   &none     &trans  &trans  &trans  &trans    &none   &none   &mkp LCLK  &mkp RCLK  &mkp MCLK  &none  &none
&trans  &none   &none  &none     &none     &none   &none     &trans  &trans  &trans  &trans    &none   &none   &none      &none      &none      &none  &none
&trans  &trans         &trans    &trans    &trans  &trans                                      &trans  &trans                                          &studio_unlock
            >;
        };

        raise_layer {
            display-name = "Raise";
            sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
            bindings = <
&trans  &kp F1     &kp F2        &kp F3            &kp F4         &kp F5            &trans  &trans  &trans  &trans                &kp F6   &kp F7    &kp F8        &kp F9     &kp F10  &none
&trans  &none      &kp LG(Z)     &kp LG(C)         &kp LG(V)      &none             &trans  &trans  &trans  &trans                &kp F11  &kp F12   &kp UP_ARROW  &none      &none    &none
